{
    "name": "udm-web",
    "version": "2.1.0",
    "author": "@pau1tuck",
    "private": true,
    "scripts": {
        "build": "esbuild src/index.tsx --bundle --define:process.env.NODE_ENV=\\\"development\\\" --outfile=public/index.js",
        "start": "web-dev-server --open public/ --node-resolve --watch",
        "gen": "graphql-codegen --config codegen.yml",
