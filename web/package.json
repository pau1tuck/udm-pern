        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-router-dom": "^5.1.6",
        "@types/yup": "^0.29.10",
        "@web/dev-server": "^0.1.0",
        "@web/dev-server-esbuild": "^0.2.9",
        "@web/test-runner": "^0.11.0",
        "core-js": "^3.8.1",
        "esbuild": "^0.8.21",
        "typescript": "^4.1.3"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
